{
  "manifest_version": 2,
  "name": "SwiftLingo",
  "version": "1.1",
  "description": "A simple translation app using MyMemory Translated API.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "Translation App"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "https://api.mymemory.translated.net/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
